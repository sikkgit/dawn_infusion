<h1>Stories</h1>
<p><%= link_to 'Home', controller: 'home' %></p>
<p><%= link_to 'New story', new_story_path %></p>
<table>
  <tr>
    <th>Title</th>
    <th>Tag</th>
    <th colspan="3"></th>
  </tr>
  <% @stories.each do |story| %>
    <tr>
      <td><%= story.title %></td>
      <td><%= story.tag %></td>
      <td><%= link_to 'Preview', story_path(story) %></td>
      <td><%= link_to 'Edit', edit_story_path(story) %></td>
      <td><%= link_to 'Delete', story_path(story), method: :delete, data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
</table>
